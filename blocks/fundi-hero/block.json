{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "wp-fundi/fundi-hero",
	"version": "1.0.0",
	"title": "Fundi Hero",
	"category": "design",
	"icon": "cover-image",
	"description": "A hero section with background image, title, subtitle, and call-to-action button.",
	"keywords": [
		"hero",
		"banner",
		"cover",
		"cta",
		"call-to-action"
	],
	"textdomain": "wp-fundi",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"supports": {
		"align": [
			"wide",
			"full"
		],
		"anchor": true,
		"customClassName": true,
		"html": false,
		"spacing": {
			"margin": true,
			"padding": true
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true
		}
	},
	"attributes": {
		"backgroundImage": {
			"type": "object",
			"default": null
		},
		"backgroundImageUrl": {
			"type": "string",
			"default": ""
		},
		"title": {
			"type": "string",
			"default": "Welcome to Our Site"
		},
		"subtitle": {
			"type": "string",
			"default": "Discover amazing content and services"
		},
		"buttonText": {
			"type": "string",
			"default": "Get Started"
		},
		"buttonUrl": {
			"type": "string",
			"default": ""
		},
		"buttonTarget": {
			"type": "boolean",
			"default": false
		},
		"overlayOpacity": {
			"type": "number",
			"default": 0.5
		},
		"textColor": {
			"type": "string",
			"default": "#ffffff"
		},
		"contentAlignment": {
			"type": "string",
			"default": "center"
		}
	},
	"example": {
		"attributes": {
			"title": "Welcome to Our Site",
			"subtitle": "Discover amazing content and services",
			"buttonText": "Get Started",
			"backgroundImageUrl": "https://via.placeholder.com/1200x600/0073aa/ffffff?text=Hero+Background"
		}
	}
}
